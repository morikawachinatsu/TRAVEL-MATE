<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :opentime  %>
    <%= f.time_field :opentime, :size => 30 %>
  </div>
   <div class="field">
    <%= f.label :endtime %>
    <%= f.time_field :endtime, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :dayoff %>
    <%= f.text_field :dayoff, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :peaktime %>
    <%= f.text_field :peaktime, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :access %>
    <%= f.text_field :access, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :budget %>
    <%= f.text_field :budget, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :photo %>
    <p><%= f.file_field :photo %></p>
</div>

  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
    <%= f.submit "投稿する", class:"button" %>
<% end %>